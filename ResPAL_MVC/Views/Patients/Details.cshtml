@model ResPAL_MVC.Models.ResPALModels.Patient

@{
    ViewData["Title"] = "Details";
}

<h2>Patient Details</h2>
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.LastName)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.FullName)
    </dd>
 
</dl>

    <form method="post" action="...">
        <div id="wizard">
            <!-- Tabstrip -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active">
                    <a href="#Demographics" role="tab" data-toggle="tab">Demographics</a>
                </li>
                <li role="presentation">
                    <a href="#DiseaseGroups" role="tab" data-toggle="tab">Disease Group</a>
                </li>
                <li role="presentation">
                    <a href="#Azoles" role="tab" data-toggle="tab">Anti Fungal Meds</a>
                </li>
                :
            </ul>
        </div>

        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="Demographics">
                <div>
                    <h4>Patient</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.RESID)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.RESID)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.RM2Number)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.RM2Number)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.LastName)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.LastName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.FirstName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Gender)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Gender)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.DOB)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.DOB)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.PatientStatus)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.PatientStatus)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Diseases)
                        </dt>
                        <dd>
                            <table class="table">
                                <tr>
                                    <th>Diseases</th>
                                    <th>Date</th>
                                </tr>
                                @foreach (var item in Model.Diseases)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DiseaseGroup)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Date)
                                        </td>
                                    </tr>
                                }
                            </table>
                        </dd>
                        <dd>
                            <table class="table">
                                <tr>
                                    <th>Drugs</th>
                                    <th>startDate</th>
                                </tr>
                                @foreach (var item in Model.Azoles)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AzoleName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StartDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EndDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AzoleNotes)
                                        </td>
                                    </tr>
                                }
                            </table>
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.PatientID">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="DiseaseGroups">
                <<table class="table">
                    <tr>
                        <th>Diseases</th>
                        <th>Date</th>
                    </tr>
                    @foreach (var item in Model.Diseases)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiseaseGroup)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                        </tr>
                    }
                </table>

            </div>
            <div role="tabpanel" class="tab-pane" id="Azoles">
                <table class="table">
                    <tr>
                        <th>Drugs</th>
                        <th>start Date</th>
                        <th>End Date</th>
                        <th>Notes</th>
                    </tr>
                    @foreach (var item in Model.Azoles)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AzoleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AzoleNotes)
                            </td>
                        </tr>
                    }
                </table>
            </div>
            :
        </div>
    </form>


